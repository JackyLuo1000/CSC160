<Page
    x:Class="DataBindingDemo_A.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataBindingDemo_A"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Viewbox>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: " />
                <TextBox x:ConnectionId='9' x:Name="NameTextBox" Width="150" 
                         Margin="20, 0"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Age: " />
                <TextBox x:ConnectionId='8' x:Name="AgeTextBox" 
                         Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=Age, Mode=TwoWay}"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Scale Color: " />
                <TextBox x:ConnectionId='7' x:Name="ScaleColorTextBox" 
                         Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=ScaleColor, Mode=TwoWay}"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Can Fly: " />
                <TextBox x:ConnectionId='6' x:Name="CanFlyTextBox" 
                         Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=CanFly, Mode=TwoWay}"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name: " />
                <TextBox x:ConnectionId='5' x:Name="Name2TextBox" Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=Name, Mode=TwoWay}"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Age: " />
                <TextBox x:ConnectionId='4' x:Name="Age2TextBox" 
                         Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=Age, Mode=TwoWay}"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Scale Color: " />
                <TextBox x:ConnectionId='3' x:Name="ScaleColor2TextBox" 
                         Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=ScaleColor, Mode=TwoWay}"
                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Can Fly: " />
                <TextBox x:ConnectionId='2' x:Name="CanFly2TextBox" 
                         Width="150" 
                         Margin="20, 0"
                         Text="{Binding Path=CanFly, Mode=TwoWay}"
                         />
            </StackPanel>
        </StackPanel>
    </Viewbox>
</Page>

