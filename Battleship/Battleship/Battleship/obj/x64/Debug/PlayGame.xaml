<Page
    x:Class="Battleship.PlayGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Battleship"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.KeyboardAccelerators>
            <KeyboardAccelerator x:ConnectionId='2' Key="E" Modifiers="Control"                            />
            <KeyboardAccelerator x:ConnectionId='3' Key="L" Modifiers="Control"                               />

        </Grid.KeyboardAccelerators>

        <TextBlock Text="Player Grid"
                   Grid.Column="0"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="50"
                   FontWeight="Bold"/>

        <TextBlock Text="Computer Grid"
                   Grid.Column="1"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="50"
                   FontWeight="Bold"/>

        <Grid x:ConnectionId='4' HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Column="0"
            Grid.Row="1"
              x:Name="PlayerGrid"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="0">

            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="1">
                <TextBlock Text="A"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="2">
                <TextBlock Text="B"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="3">
                <TextBlock Text="C"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="4">
                <TextBlock Text="D"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="5">
                <TextBlock Text="E"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="6">
                <TextBlock Text="F"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="7">
                <TextBlock Text="G"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="8">
                <TextBlock Text="H"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="9">
                <TextBlock Text="I"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="10">
                <TextBlock Text="J"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="1"
                    Grid.Row="0">
                <TextBlock Text="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="2"
                    Grid.Row="0">
                <TextBlock Text="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="3"
                    Grid.Row="0">
                <TextBlock Text="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="4"
                    Grid.Row="0">
                <TextBlock Text="4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="5"
                    Grid.Row="0">
                <TextBlock Text="5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="6"
                    Grid.Row="0">
                <TextBlock Text="6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="0">
                <TextBlock Text="7" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="8"
                    Grid.Row="0">
                <TextBlock Text="8"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="9"
                    Grid.Row="0">
                <TextBlock Text="9"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="10"
                    Grid.Row="0">
                <TextBlock Text="10" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <Grid x:ConnectionId='5' HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Column="1"
            Grid.Row="1"
              x:Name="ComputerGrid"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="0">

            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="1">
                <TextBlock Text="A"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="2">
                <TextBlock Text="B"
                       HorizontalAlignment="Center"
