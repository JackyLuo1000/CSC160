            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="3">
                <TextBlock Text="C"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="4">
                <TextBlock Text="D"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="5">
                <TextBlock Text="E"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="6">
                <TextBlock Text="F"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="7">
                <TextBlock Text="G"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="8">
                <TextBlock Text="H"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="9">
                <TextBlock Text="I"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Grid.Row="10">
                <TextBlock Text="J"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="1"
                    Grid.Row="0">
                <TextBlock Text="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="2"
                    Grid.Row="0">
                <TextBlock Text="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="3"
                    Grid.Row="0">
                <TextBlock Text="3"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="4"
                    Grid.Row="0">
                <TextBlock Text="4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="5"
                    Grid.Row="0">
                <TextBlock Text="5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="6"
                    Grid.Row="0">
                <TextBlock Text="6"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="7"
                    Grid.Row="0">
                <TextBlock Text="7" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="8"
                    Grid.Row="0">
                <TextBlock Text="8"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="9"
                    Grid.Row="0">
                <TextBlock Text="9"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="10"
                    Grid.Row="0">
                <TextBlock Text="10" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <Button x:ConnectionId='6' x:Name="SaveGame"
                Content="Save Game"
                FontSize="50"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="1"
                                      />
    </Grid>
</Page>

